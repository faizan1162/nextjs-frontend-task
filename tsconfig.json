{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@components/*": ["components/*"],
    "@config/*": ["config/*"],
    "@hooks/*": ["hooks/*"],
    "@pages/*": ["pages/*"],
    "@services/*": ["services/*"],
    "@styles/*": ["styles/*"],
    "@types/*": ["types/*"],
    "@utils/*": ["utils/*"],
  }
}
